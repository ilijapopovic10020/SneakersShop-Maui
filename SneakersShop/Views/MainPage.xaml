<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="SneakersShop.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SneakersShop.Views"
    Shell.TabBarIsVisible="True">
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:HomePage}"
            Icon="home.png"
            Route="HomePage" />
        <ShellContent
            Title="Search"
            ContentTemplate="{DataTemplate views:AllProductsPage}"
            Icon="search.png"
            Route="AllProductsPage" />
        <ShellContent
            Title="Cart"
            ContentTemplate="{DataTemplate views:CartPage}"
            Icon="cart.png"
            Route="CartPage" />
        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate views:ProfilePage}"
            Icon="profile.png"
            Route="ProfilePage" />
    </TabBar>
</Shell>